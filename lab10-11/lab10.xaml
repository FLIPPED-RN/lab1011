<Page x:Class="lab10_11.lab10"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:lab10_11"
      mc:Ignorable="d"
      Title="lab10" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Content of f1.txt:" FontWeight="Bold" Margin="10"/>
            <TextBox x:Name="FileContentTextBox" Margin="10" Height="150" IsReadOnly="False" TextWrapping="Wrap"/>
            <Button Content="Load File f1" Click="LoadFileButton_Click" Margin="10"/>
            <Button Content="Save Changes to f1" Click="SaveFileButton_Click" Margin="10"/>
            <Button Content="Copy to File f2" Click="CopyFileButton_Click" Margin="10"/>
            <TextBlock x:Name="StatusTextBlock" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>